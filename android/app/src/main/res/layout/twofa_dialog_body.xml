<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    >

    <TextView
        android:id="@+id/text_small_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is small top text"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <TextView
        android:id="@+id/text_center_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:letterSpacing="0.5"
        android:text="333333"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge" />

    <TextView
        android:id="@+id/text_small_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do not share it with anyone. Apple will never call or text you for this code."
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
</LinearLayout>
